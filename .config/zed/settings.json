{
  "base_keymap": "JetBrains",
  "telemetry": {
    "diagnostics": false,
    "metrics": false
  },
  "buffer_font_family": "JetBrainsMono Nerd Font",
  "ui_font_size": 18,
  "buffer_font_size": 16,
  "autosave": "on_focus_change",
  "hard_tabs": true,
  "tab_size": 2,
  "theme": {
    "mode": "dark",
    "light": "One Light",
    "dark": "Ros√© Pine Moon"
  },
  "calls": {
    "mute_on_join": true
  },
  "inlay_hints": {
    "enabled": true
  },
  "project_panel": {
    "indent_size": 15,
    "default_width": 260
  },
  "tabs": {
    "git_status": true
  },
  "journal": {
    "hour_format": "hour24"
  },
  "scrollbar": {
    "git_diff": false
  },
  "scroll_sensitivity": 1.2,
  "tab_bar": {
    "show_nav_history_buttons": false
  },
  "private_files": [
    "**/.env*",
    "**/*.pem",
    "**/*.key",
    "**/*.cert",
    "**/*.crt",
    "**/secrets.yml",
    "**/*.pfx"
  ],
  "terminal": {
    "working_directory": "current_project_directory",
    "env": {
      "EDITOR": "zeditor --wait"
    }
  }
}
