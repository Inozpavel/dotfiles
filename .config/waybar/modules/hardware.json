{
  "group/hardware": {
    "orientation": "inherit",
    "modules": [
      "cpu",
      "disk",
      "memory"
    ]
  },
  "disk": {
    "interval": 30,
    "format": "|    {percentage_used}% ",
    "path": "/",
    "on-click": "~/dotfiles/.settings/systeminfo.sh"
  },
  "cpu": {
    "interval": 2,
    "format": "  {usage}% ",
    "tooltip": true,
    "on-click": "~/dotfiles/.settings/systeminfo.sh"
  },
  "memory": {
    "interval": 5,
    "format": "|   {used:0.1f}G/{total:0.1f}G ({}%)",
    "on-click": "~/dotfiles/.settings/systeminfo.sh",
    "tooltip": true,
    "tooltip-format": "SWAP: {swapUsed:0.1f}G/{swapTotal:0.1f}G\n Available memory: {avail}G, swap: {swapAvail}G"
  },

}
